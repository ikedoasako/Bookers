<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <% @books.each do |book| %>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'show', book_path(book.id) %></td>
        <td><%= link_to 'edit', edit_book_path(book.id) %></td>
        <td><%= link_to 'destroy', book_path(book.id), method: :delete %></td>
      <% end %>
    </tr>
  </tbody>
</table>

<div class="book-wrap">

</div>
